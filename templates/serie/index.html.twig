{% extends 'base.html.twig' %}


{% block head %}{% endblock %}

{% block content %}
    <div class="ml-4 mt-4 mr-4">
        <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 max-h-60 rounded-lg">
                {% for key,serie in series %}

                    <div class="group hover:shadow-lg ">
                        <a href="{{ path('manga', {'serie': serie.id}) }}">
                            <img class="rounded-lg max-h-60 sm:max-h-30" src="images/{% if mangaImage[key] %}{{ mangaImage[key] }}{% else %}noimage.jpg{% endif %}">
                        </a>
                    </div>
                {% endfor %}
        </ul>
    </div>


{% endblock %}

